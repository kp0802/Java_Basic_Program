package com.ilpbatch4.utility;

public class Pattern1 {

	public static void main(String[] args) {
		int rows = 9;
		drawPattern(rows);
	}

	private static void drawPattern(int rows) {
		for (int i = 1; i <= rows; i++) {
			for (int j = 1; j <= i; j++) {
				System.out.print(j + " ");
			}
			System.out.println("");
		}
	}

}
