package com.ilpbatch4.utility;

public class FactorialOfNumber {

	public static void main(String[] args) {
		int input = 7;
		factorial(input);

	}

	private static void factorial(int input) {
		int fact = 1;
		for(int i = 1; i <= input; i++) {
			fact = fact * i;
		}
		System.out.println(fact);
	}

}
